{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "./js",
    "rootDir": "./ts",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["ts/**/*"],
  "exclude": ["node_modules"]
}
